{
  "name": "to-do-tool-api-service",
  "version": "1.0.0",
  "description": "The API server for To-Do-Tool",
  "main": "server.js",
  "scripts": {
    "dev": "nodemon server.js",
    "start": "node server.js",
    "migrate": "node -r dotenv/config ./node_modules/knex/bin/cli.js migrate:latest --knexfile './src/db/knexfile.js'",
    "revert-latest-migrations": "node -r dotenv/config ./node_modules/knex/bin/cli.js migrate:rollback --knexfile './src/db/knexfile.js'",
    "lint-code": "eslint . --fix",
    "format-code": "prettier --write .",
    "pre-commit": "lint-staged"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nchopyk/to-do-tool-api-service.git"
  },
  "keywords": [
    "Fastify",
    "Nodejs",
    "MySql"
  ],
  "author": "To-Do-Tool Team",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/nchopyk/to-do-tool-api-service/issues"
  },
  "homepage": "https://github.com/nchopyk/to-do-tool-api-service#readme",
  "dependencies": {
    "dotenv": "^10.0.0",
    "fastify": "^3.24.1",
    "fastify-cookie": "^5.4.0",
    "fastify-cors": "^6.0.2",
    "fastify-jwt": "^4.1.0",
    "fastify-static": "^4.5.0",
    "joi": "^17.5.0",
    "knex": "^0.95.14",
    "mysql": "^2.18.1"
  },
  "devDependencies": {
    "eslint": "^8.5.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-jest": "^25.3.0",
    "husky": "^4.3.8",
    "lint-staged": "^12.1.4",
    "nodemon": "^2.0.15",
    "prettier": "^2.5.1"
  },
  "lint-staged": {
    "*": [
      "prettier --write ",
      "eslint --fix"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run pre-commit"
    }
  }
}
